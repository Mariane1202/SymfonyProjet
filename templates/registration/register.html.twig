<!DOCTYPE html>
<html>
        <head>
        <meta charset="UTF-8">
         <meta http-equiv="X-UA-Compatible" content="IE=edge">
         <meta name="viewport" content="width=device-width, initial-scale=1">
         {% block title %}Register{% endblock %}
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
         <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
              <script src="https://cdn.jsdelivr.net/gh/mcstudios/glightbox/dist/js/glightbox.min.js"></script>
        {% block stylesheets %}{% endblock %}

        <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
       <link rel="stylesheet" href="{{asset('assets/css/fontawesome.css')}}">

        {% block javascripts %}{% endblock %}
    
    </head>



{% block body %}
<section class="get-started">
 <div class ="container">
      <div class="row text-center">
      <h1 class="display-3 fw-bold text-capitalize">Gestion AppStock</h1>
      <div class="heading-line"></div>
      <p class="lh-lg">
       Bienvenue sur votre site 
      </p>
    </div>
    <div class="row text-black">
    <div class="justify-content-xl-center bg-white shadow p-3">
        <div class="form w-100 pb-2">
          <h4 class="display-3--title mb-5">Register</h4>

            {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                
                {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.email) }}
                        
                
                </fieldset>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-lg btn-primary">Register</button>
            
                <a href={{path('app_login')}} class="btn btn-lg btn-primary">Login</a>
            

            {{ form_end(registrationForm) }}

        </div>
    </div>
       </div>
</section>
   
{% endblock %}
